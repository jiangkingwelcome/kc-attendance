<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kc.system.mapper.SysUserEmployeeMapper">

    <resultMap type="SysUserEmployee" id="SysUserEmployeeResult">
        <result property="userId"    column="user_id"    />
        <result property="employeeId"    column="employee_id"    />
    </resultMap>

    <sql id="selectSysUserEmployeeVo">
        select user_id, employee_id from sys_user_employee
    </sql>

    <select id="selectSysUserEmployeeList" parameterType="SysUserEmployee" resultMap="SysUserEmployeeResult">
        <include refid="selectSysUserEmployeeVo"/>
        <where>
        </where>
    </select>

    <select id="selectSysUserEmployeeByUserId" parameterType="Long" resultMap="SysUserEmployeeResult">
        <include refid="selectSysUserEmployeeVo"/>
        where user_id = #{userId}
    </select>

    <insert id="insertSysUserEmployee" parameterType="SysUserEmployee">
        insert into sys_user_employee
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="employeeId != null and employeeId != ''">employee_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="employeeId != null and employeeId != ''">#{employeeId},</if>
         </trim>
    </insert>

    <update id="updateSysUserEmployee" parameterType="SysUserEmployee">
        update sys_user_employee
        <trim prefix="SET" suffixOverrides=",">
            <if test="employeeId != null and employeeId != ''">employee_id = #{employeeId},</if>
        </trim>
        where user_id = #{userId}
    </update>

    <delete id="deleteSysUserEmployeeByUserId" parameterType="Long">
        delete from sys_user_employee where user_id = #{userId}
    </delete>

    <delete id="deleteSysUserEmployeeByUserIds" parameterType="String">
        delete from sys_user_employee where user_id in
        <foreach item="userId" collection="array" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </delete>
</mapper>
